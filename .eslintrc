{
   "parser": "babel-eslint",
   "extends": ["eslint:recommended", "plugin:react/recommended"],
   "env": {
      "browser": true,
      "node": true
   },
   "plugins": ["react", "react-hooks"],
   "parserOptions": {
      "ecmaFeatures": {
         "jsx": true
      }
   },
   "settings": {
      "react": {
         "version": "detect"
      }
   },
   "rules": {
      "react-hooks/rules-of-hooks": "warn",
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": "warn",
      "no-undef": "warn",
      "react/prop-types": "warn"
   }
}
